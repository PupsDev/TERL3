{% extends 'base.html.twig' %}

{% block title %}{{ 'global.register' | trans(domain = 'global')}}{% endblock %}
{% block body %}
    <body class="fondmap">
    <div class="w30">
        {{ form_start(form, {'action': path('app_register'), 'method': 'POST'}) }}
        <h1 class='text-center'>Inscription</h1>
        {{ form_widget(form.user)}}
        <div id='registration_terms'>
            {{ form_widget(form.terms) }}
            {{ form_label(form.terms) }}
        </div>
        <input id="registration_submit" class="btn btn-success" type="submit" value="{{ 'form.submit.register'|trans(domain = 'form') }}">
        {{ form_end(form) }}
    </div>
    </body>
{% endblock %}